<div class="container-small">
  <h2>User Login</h2>
  <%= form_with model: @user, url: sessions_path do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <%= form.submit "Login" %>
  <% end %>
</div>
